    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <ul class="cart__item-list">
                <% for(let product of products) {%> 

                <li class="cart__item">
                   <h1><%= product.productId.title %></h1>
                   <h2>Quantity:<%= product.quantity %></h2>
                </li>
                 
                <% } %>    
             </ul>
             <div class="centered">
                 <h2>Total: <%= totalSum %> </h2>
             </div>
