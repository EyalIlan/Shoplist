                <script>
                   var stripe = Stripe('pk_test_51HlqG0L5XN9A2GRJVzHteqA9Esz6X17FzOEfrWUSei8Fm2JngL7BNekJWCQZDHb3BMn5kmFIZuk2TvVSkKqubVvq00RrQAESu5');
                   var orderBtn = document.getElementById('order-btn')
                   orderBtn.addEventListener('click',function(){
                    stripe.redirectToCheckout({
                        sessionId:'<%= sessionId %>'
                    })    
                   }) 
                </script>
             </div>

        </main>
